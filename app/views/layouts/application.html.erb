<!DOCTYPE html>
<html>
  <head>
    <title>片頭痛会</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>  
  </head>

  <body class="back">
    <ul class="head">
      <li><%= link_to("片頭痛会","/",class:"text-decoration-none")%></li>
      <li><%= link_to("片頭痛にならないために","/information/top",class:"text-decoration-none")%></li>
      <% if user_signed_in? %>
        <li><%= link_to(current_user.name,"/users/#{current_user.id}",class:"text-decoration-none")%></li>
        <li><%= link_to("ログアウト","/users/sign_out",class:"text-decoration-none",data: { confirm: 'ログアウトしますか？' })%></li>
        <li><%= link_to("カレンダー","/blogs/index",class:"text-decoration-none")%></li> 
        <li><%= link_to("日記","/blogs/new",class:"text-decoration-none")%></li>
      <% else %>
        <li><%= link_to("新規登録","/users/sign_up",class:"text-decoration-none")%></li>
        <li><%= link_to("ログイン","/users/sign_in",class:"text-decoration-none")%></li>
      <% end %>
    </ul>
    <script>
    $(function(){
        $('.main').fadeIn(2000);
    });
    </script>
    <%= yield %>
  </body>
</html>
