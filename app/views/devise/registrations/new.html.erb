<div class="main text-center mt-5">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" ,class: "col-3"%>
    </div>

    <div class="field">
      <%= f.label :お住いの地域 %><br />
      <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture" ,class: "col-3"%>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "col-3"%>
    </div>

    <div class="field">
      <%= f.label :ユーザー画像 %><br />
      <%= f.file_field :image, autofocus: true, autocomplete: "image" ,class: "col-3"%>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" ,class: "col-3"%>
    </div>

    <div class="field">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"col-3"%>
    </div>

    <div class="actions">
      <%= f.submit "登録" ,class: "btn btn-secondary col-3 mt-3"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>