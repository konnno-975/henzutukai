<div class="main text-center mt-10">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"col-3"%>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" ,class:"col-3"%>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" ,class:"btn btn-secondary col-3 mt-3"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>